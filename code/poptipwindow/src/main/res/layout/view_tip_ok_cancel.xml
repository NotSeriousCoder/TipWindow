<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:id="@+id/rl_m_view_tip_ok_cancel_p_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_window"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/ll_m_view_tip_ok_cancel_p_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="10dp"
            android:paddingRight="6dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_m_view_tip_ok_cancel_p_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_m_view_tip_ok_cancel_p_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_m_view_tip_ok_cancel_p_content"
            android:paddingLeft="12dp"
            android:layout_alignLeft="@+id/ll_m_view_tip_ok_cancel_p_content"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_m_view_tip_ok_cancel_p_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_m_view_tip_ok_cancel_p_content"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:layout_alignRight="@+id/ll_m_view_tip_ok_cancel_p_content"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>