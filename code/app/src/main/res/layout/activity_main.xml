<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/bt_custom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CustomTipWindow--使用默认布局"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CustomTipWindow--使用自定义布局"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListTipWindow--列表模式"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/bt_data_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UniversalPickerWindow-联动滚轮"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_date_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DateTimePickerWindow--时间选择器"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_waiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WaitingWindow--等待窗口"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
