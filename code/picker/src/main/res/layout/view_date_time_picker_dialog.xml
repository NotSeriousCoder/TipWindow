<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_app_radius"
        android:orientation="vertical">


        <android.support.design.widget.TabLayout
            android:id="@+id/tl_m_view_date_time_picker_p_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:tabGravity="fill"
            app:tabIndicatorColor="#ffff11"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#3a9155"
            app:tabTextColor="#000000" />


        <android.support.v4.view.ViewPager
            android:id="@+id/vp_m_view_date_time_picker_p_vp"
            android:layout_width="match_parent"
            android:layout_height="170dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_m_view_date_time_picker_p_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_m_view_date_time_picker_p_divider_vertical"
                android:layout_width="0.4dp"
                android:layout_height="46dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/tv_m_view_date_time_picker_p_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>